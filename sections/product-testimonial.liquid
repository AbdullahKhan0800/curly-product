                    },
                    {
                        "type": "text",
                        "id": "lastheading",
                        "placeholder": "Nick Name",
                        "default": "Lea99",
                        "label": "Nick Name"
                    },
                    {
                        "type": "text",
                        "id": "comment-text",
                        "placeholder": "Comment Product",
                        "default": "Slim & Detox gummies",
                        "label": "Product Name"
                    },
                    {
                        "type": "text",
                        "id": "date-text",
                        "placeholder": "Date",
                        "default": "17 oct. 2021",
                        "label": "Date"
                    }

                ]
            }
        ],
        "presets": [
            {
                "name": "Product Testimonial",
                "category": "ADVANCED LAYOUT"
            }
        ]
    }
